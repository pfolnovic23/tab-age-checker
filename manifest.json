{
  "manifest_version": 3,
  "name": "Tab Age Tracker",
  "version": "1.0.0",
  "description": "Visual indicator showing how long tabs have been inactive. Green for fresh, orange for stale, red for old.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "sort-by-age": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Sort tabs by age (oldest first)"
    },
    "close-old-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Close tabs older than threshold"
    }
  }
}
